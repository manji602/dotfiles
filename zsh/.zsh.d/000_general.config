# ==============================================================================
# ENV
# ==============================================================================
export LANG=ja_JP.UTF-8

# ==============================================================================
# alias
# ==============================================================================
alias cp='cp -i'
alias mkdir='mkdir -p'
alias mv='mv -i'
alias rm='rm -i'

# ==============================================================================
# history
# ==============================================================================
export HISTFILE=${HOME}/.zhistory
export HISTSIZE=100
export SAVEHIST=1000000

setopt EXTENDED_HISTORY
setopt hist_expand
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_no_store

function history-all { history -E 1 }
