# ==============================================================================
# load zsh fragment
# ==============================================================================
if [ -d "${HOME}/.zsh.d" ]; then
   for f in "${HOME}"/.zsh.d/* ; do
       source $f
   done
fi

# ==============================================================================
# load config with OS type
# ==============================================================================
case "${OSTYPE}" in
    darwin*)
    [ -f ~/dotfiles/.zshrc.osx ] && source ~/dotfiles/.zshrc.osx
    ;;
    linux*)
    [ -f ~/dotfiles/.zshrc.linux ] && source ~/dotfiles/.zshrc.linux
    ;;
esac

# ==============================================================================
# load local config
# ==============================================================================
if [ -f ~/.zshrc.local ]; then
    source ~/.zshrc.local
fi
